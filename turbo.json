{
    "$schema": "https://turbo.build/schema.json",
    "tasks": {
        "build": {
            "dependsOn": ["^build"],
            "outputs": ["dist/**"]
        },
        "test": {
                "dependsOn": ["^build", "^test"],
                "cache": false
        },
        "test:ci": {
                    "dependsOn": ["^build", "^test:ci"],
                    "cache": false
        },
            "lint": {
                "dependsOn": ["^lint"]
            },
            "format": {
                "dependsOn": ["^format"]
            },
        "typecheck": {
                    "dependsOn": ["^build", "^typecheck"]
        },
        "check": {
                "dependsOn": ["^typecheck", "^lint", "^test:ci"]
        },
        "check-gamedata": {
            "dependsOn": ["build"]
        },
        "gen-map": {},
        "gen-map:v2": {},
        "dev": {
            "cache": false,
            "persistent": true
        }
    }
}
