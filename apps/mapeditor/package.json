{
    "name": "@proj-tower/mapeditor",
    "version": "1.0.0",
    "private": true,
    "type": "module",
    "scripts": {
        "dev": "tsx src/run-server.ts",
        "dev:server": "tsx src/run-server.ts",
        "dev:all": "tsx src/run-server.ts",
        "build": "vite build",
        "test": "vitest --run",
        "test:watch": "vitest",
        "typecheck": "tsc --noEmit",
        "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
        "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
        "lint": "eslint --ext .ts,.tsx src",
        "lint:fix": "eslint --ext .ts,.tsx src --fix"
    },
    "dependencies": {
        "@proj-tower/logic-core": "workspace:*",
        "@proj-tower/maprender": "workspace:*",
        "fastify": "^4.28.1",
        "pixi.js": "^8.12.0",
        "typescript": "^5.9.2"
    },
    "devDependencies": {
        "@fastify/middie": "^8.0.1",
        "@types/node": "^24.3.0",
        "ts-node": "^10.9.2",
        "tsx": "^4.20.5",
        "vite": "^7.1.3",
        "vite-plugin-fastify": "^1.2.6",
        "vitest": "^3.2.4"
    }
}
