{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "strict": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["vitest/globals", "vite/client"],
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@proj-tower/logic-core": ["../../packages/logic-core/src"],
      "@proj-tower/logic-core/*": ["../../packages/logic-core/src/*"],
      "@proj-tower/maprender": ["../../packages/maprender/src"],
      "@proj-tower/maprender/*": ["../../packages/maprender/src/*"]
    }
  },
  "include": ["src"],
  "references": [
    { "path": "../../packages/logic-core" },
    { "path": "../../packages/maprender" }
  ]
}
